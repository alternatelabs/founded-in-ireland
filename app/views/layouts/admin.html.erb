    <title>Founded In Ireland</title>

    <meta property="og:url" content="http://foundedinireland.com/" />
    <meta property="og:type" content="website" />

    <script>
	    /**
	    * Function that tracks a click on an outbound link in Google Analytics.
	    */
	    var trackOutboundLink = function(url) {
	       ga('send', 'event', 'outbound', 'click', url);
	    }
    </script>

    <%= csrf_meta_tags %>
</head>

<body class="bg-light-gray">
  <%= render "partials/flash_messages" %>

  <% if current_user.present? %>
    <div class="bg-white pa4">
      <div class="mw8 flex items-center center dark-green f6">
        <span class="fw7 mr5 ttu f6 tracked">Admin</span>
        <% link_styles = "no-underline mr5 green f6 fw4 dim" %>
        <%= link_to "Startups", admin_startups_path, class: link_styles %>
        <%= link_to "Pages", admin_pages_path, class: link_styles %>
        <%= link_to "Posts", admin_posts_path, class: link_styles %>
        <%= link_to "General Settings", admin_homepage_edit_path, class: link_styles %>
        <span class="flex-auto tr">
          Signed in as <%= current_user.email %>&nbsp;&nbsp;&nbsp;Â·&nbsp;&nbsp;&nbsp;
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: link_styles %>
        </span>
      </div>
    </div>
  <% end %>

  <div class="mw8 center mb5">
    <%= yield %>
  </div>

  <%= javascript_include_tag "admin" %>
</body>
</html>
