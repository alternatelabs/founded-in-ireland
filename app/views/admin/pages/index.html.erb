<h2>List Pages</h2>
<hr>

<ul class="sub-nav">
  <li><%= link_to "List Pages", admin_pages_path %></li>
  <li><%= link_to "New Page", new_admin_page_path %></li>
</ul>

<hr>

<table>
  <thead>
    <tr>
      <td>Page Title</td>
      <td>Page Slug</td>
      <td>Options</td>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.slug %></td>
        <td><%= link_to "Edit", edit_admin_page_path(page) %></td>
      </tr>
    <% end %>
  </tbody>
</table>