<h2>Edit Homepage Content</h2>
<hr>

<%= form_with(url: admin_homepage_edit_path) do |f| %>
  <% @homepage.each do |key,val| %>
    <label><%= key.humanize %></label>
    <textarea name="<%= key %>" class="wysiwyg"><%= val %></textarea>
  <% end %>

  <input type="submit" value="Update Homepage" />
<% end %>
