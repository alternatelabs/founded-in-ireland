<div class="flex mt5">
  <h2 class="flex-auto ma0">All Startups</h2>
  <div class="ml5 self-center">
    <%#= link_to "New Startup", new_admin_startup_path, class: "no-underline bg-blue white fw7 pa3 bn br2 pointer tracked f6 ttu" %>
  </div>
</div>
<hr>

<% unless @startups.present? %>

  <p>No startups have been added yet</p>

<% else %>

  <table cellspacing="0">
    <thead>
      <tr>
        <th>Startup Name</th>
        <th>Status</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      <% @startups.each do |startup| %>
        <tr>
          <td><%= startup.name %></td>
          <td><%= startup.status %></td>
          <td><%= link_to "Edit", edit_admin_startup_path(startup) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
