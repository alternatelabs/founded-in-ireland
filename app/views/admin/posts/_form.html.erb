<%= form_with(model: @post, url: [:admin, @post], class: "mw7") do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <% unless @post.persisted? %>
    <div class="form-group">
      <%= f.label :slug, "Slug (this cannot be updated)" %>
      <%= f.text_field :slug %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :extract %>
    <%= f.text_area :extract %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "wysiwyg" %>
  </div>
  <div class="form-group">
    <%= f.label :status %>
    <%= f.select(:status, ['draft', 'published']) %>
  </div>

  <hr>

  <div class="flex items-center mt4">
    <%= f.submit class: "bg-near-black white fw7 pa3 bn br2 pointer tracked f6 ttu" %>
    <% if @post.persisted? %>
      <%= link_to 'Delete Post', admin_post_path(@post), method: :delete, class: 'delete', "data-confirm" => "Are you sure you want to delete this?", class: "ml7 red" %>
    <% end %>
  </div>
<% end %>
