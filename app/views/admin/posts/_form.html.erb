<%= form_with(model: @post, url: [:admin, @post]) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <% unless @post.persisted? %>
    <div class="form-group">
      <%= f.label :slug, "Slug (this cannot be updated)" %>
      <%= f.text_field :slug %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :extract %>
    <%= f.text_area :extract %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "wysiwyg" %>
  </div>
  <div class="form-group">
    <%= f.label :status %>
    <%= f.select(:status, ['draft', 'published']) %>
  </div>

  <hr>

  <%= f.submit %>
<% end %>
